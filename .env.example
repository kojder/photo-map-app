# Photo Map MVP - Backend Environment Variables
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to Git!

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL connection details
DB_HOST=localhost
DB_PORT=5432
DB_NAME=photomap
DB_USERNAME=photomap_user
DB_PASSWORD=your_secure_password_here

# Full JDBC URL (auto-constructed from above, or override)
# DATABASE_URL=jdbc:postgresql://${DB_HOST}:${DB_PORT}/${DB_NAME}

# ============================================
# JWT AUTHENTICATION
# ============================================

# JWT secret key (MUST be at least 256 bits / 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_256_bit_secret_key_here_change_this_in_production

# JWT token expiration in milliseconds (default: 24 hours)
JWT_EXPIRATION=86400000

# ============================================
# STORAGE CONFIGURATION
# ============================================

# Base path for photo storage
STORAGE_PATH=/opt/photomap/storage

# Photo upload limits
MAX_FILE_SIZE=10485760
# 10MB in bytes (10 * 1024 * 1024)

# ============================================
# SERVER CONFIGURATION
# ============================================

# Server port (default: 8080)
SERVER_PORT=8080

# Active Spring profile (dev, prod)
SPRING_PROFILES_ACTIVE=dev

# ============================================
# CORS CONFIGURATION
# ============================================

# Allowed origins for CORS (comma-separated)
# Development: http://localhost:4200
# Production: https://yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:4200

# ============================================
# LOGGING
# ============================================

# Log level (TRACE, DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=/var/log/photomap/application.log

# ============================================
# MIKRUS VPS DEPLOYMENT (PRODUCTION)
# ============================================

# Production database (override above settings)
# PROD_DB_HOST=localhost
# PROD_DB_USERNAME=photomap_prod
# PROD_DB_PASSWORD=strong_production_password

# Production JWT secret (MUST be different from dev!)
# PROD_JWT_SECRET=production_256_bit_secret_key

# Production storage path
# PROD_STORAGE_PATH=/storage/photomap

# ============================================
# OPTIONAL: EMAIL NOTIFICATIONS (Future)
# ============================================

# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# ============================================
# NOTES
# ============================================

# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual values in .env
# 3. Never commit .env to Git!
# 4. For production, use strong passwords and secrets
# 5. Generate JWT secret: openssl rand -base64 32
