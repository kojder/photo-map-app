# Photo Map MVP - Environment Variables
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to Git!

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=photomap
DB_USERNAME=photomap_user
DB_PASSWORD=

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=
JWT_EXPIRATION=86400000

# ============================================
# PHOTO STORAGE DIRECTORIES
# ============================================
UPLOAD_DIR_INPUT=./uploads/input
UPLOAD_DIR_ORIGINAL=./uploads/original
UPLOAD_DIR_SMALL=./uploads/small
UPLOAD_DIR_MEDIUM=./uploads/medium
UPLOAD_DIR_LARGE=./uploads/large
UPLOAD_DIR_FAILED=./uploads/failed

# ============================================
# PHOTO PROCESSING
# ============================================
PHOTO_PROCESSING_POLL_INTERVAL=10000
PHOTO_PROCESSING_ADMIN_ID=1

# ============================================
# SERVER CONFIGURATION
# ============================================
SERVER_PORT=8080

# ============================================
# SECURITY
# ============================================
SECURITY_ENABLED=false

# ============================================
# TEST USERS (Development Only)
# ============================================
# Admin user credentials for development/testing
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=

# Regular user credentials for development/testing
TEST_USER_EMAIL=user@example.com
TEST_USER_PASSWORD=

# ============================================
# NOTES
# ============================================
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual values in .env
# 3. Never commit .env to Git!
# 4. For production, use strong passwords and secrets
# 5. Generate JWT secret: openssl rand -base64 32
